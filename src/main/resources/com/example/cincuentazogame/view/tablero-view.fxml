<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/24.0.1"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.cincuentazogame.controller.TableroController"
      prefHeight="400.0" prefWidth="600.0"
      stylesheets="@tablero-styles.css">

    <children>

        <!--cartas de los bots  -->
        <HBox prefHeight="156.0" prefWidth="600.0" styleClass="contenedorHead" alignment="CENTER" spacing="10">
            <children>
                <HBox prefHeight="100.0" prefWidth="90.0" styleClass="cartasBots" />
                <HBox prefHeight="120.0" prefWidth="86.0" styleClass="cartasBots" />
                <HBox prefHeight="100.0" prefWidth="98.0" styleClass="cartasBots" />
            </children>
        </HBox>

        <!-- mesa y suma -->
        <VBox alignment="CENTER" spacing="10" styleClass="contenedorBody" prefHeight="120.0" prefWidth="600.0">
            <children>
                <Label fx:id="lblTurno" text="Turno de: Jugador" styleClass="textoTurno"/>
                <Label fx:id="lblSumaMesa" text="Suma de la mesa: 0" styleClass="textoSuma"/>
                <HBox fx:id="contenedorMesa" alignment="CENTER" spacing="10" prefHeight="100.0" prefWidth="600.0"
                      styleClass="mesaCartas"/>
            </children>
        </VBox>

        <!--cartas del jugador humano -->
        <HBox prefHeight="138.0" prefWidth="600.0" styleClass="contenedorFooter" alignment="CENTER" spacing="10">
            <children>
                <HBox fx:id="contenedorCartasJugador" alignment="CENTER" spacing="10"
                      prefHeight="120.0" prefWidth="400.0" styleClass="cartasJugador"/>
                <Button fx:id="btnJugarCarta" text="Jugar Carta" onAction="#onJugarCarta"
                        styleClass="botonJugar"/>
            </children>
        </HBox>

    </children>
</VBox>
