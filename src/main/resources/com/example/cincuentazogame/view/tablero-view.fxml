<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="438.0" prefWidth="652.0" stylesheets="@tablero-styles.css" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.cincuentazogame.controller.TableroController">

    <children>

        <!--cartas de los bots  -->
        <HBox alignment="CENTER" prefHeight="156.0" prefWidth="600.0" spacing="10" styleClass="contenedorHead">
            <children>
            <ImageView fx:id="imgBot1" fitHeight="150.0" fitWidth="100.0" pickOnBounds="true" preserveRatio="true" styleClass="cartasBots" />
            <ImageView fx:id="imgBot2" fitHeight="150.0" fitWidth="115.0" pickOnBounds="true" preserveRatio="true" styleClass="cartasBots" />
            <ImageView fx:id="imgBot3" fitHeight="150.0" fitWidth="117.0" pickOnBounds="true" preserveRatio="true" styleClass="cartasBots" />
            </children>
        </HBox>
      <HBox prefHeight="120.0" prefWidth="652.0">
         <children>
            <HBox prefHeight="100.0" prefWidth="200.0" styleClass="contenedorLabel2">
               <children>
                  <Label fx:id="lblTimer" text="Tiempo: 00:35" />
               </children>
            </HBox>
      
              <!-- mesa y suma -->
              <VBox alignment="CENTER" prefHeight="100.0" prefWidth="273.0" spacing="10" styleClass="contenedorBody">
                  <children>
                      <HBox fx:id="contenedorMesa" alignment="CENTER" prefHeight="78.0" prefWidth="259.0" spacing="10" styleClass="mesaCartas" />
                  </children>
              </VBox>
            <VBox prefHeight="100.0" prefWidth="181.0" styleClass="contenedorLabel2">
               <children>
                      <Label fx:id="lblTurno" styleClass="textoTurno" text="Turno de: Jugador" />
                      <Label fx:id="lblSumaMesa" styleClass="textoSuma" text="Suma de la mesa: 0" />
               </children>
            </VBox>
         </children>
      </HBox>

        <!--cartas del jugador humano -->
        <HBox alignment="CENTER" prefHeight="138.0" prefWidth="600.0" spacing="10" styleClass="contenedorFooter">
            <children>
                <HBox fx:id="contenedorCartasJugador" alignment="CENTER" prefHeight="120.0" prefWidth="400.0" spacing="10" styleClass="cartasJugador" />
            </children>
        </HBox>

    </children>
</VBox>
