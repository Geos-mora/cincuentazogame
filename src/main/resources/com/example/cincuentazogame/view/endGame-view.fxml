<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<StackPane  fx:id="rootEndGame"
            stylesheets="@endGame-styles.css"
            xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.cincuentazogame.controller.EndGameController"
            prefHeight="400.0" prefWidth="600.0">
    <!-- Fondo
    <ImageView fx:id="backgroundImage"
               fitWidth="600"
               fitHeight="400"
               preserveRatio="false"
               opacity="0.25"
               style="-fx-effect: gaussian-blur(8px);"/>
     -->

    <!--contenedor principal-->
    <VBox alignment="CENTER" spacing="15">
        <!--titulo-->
        <Label text="¡Juego Terminado!"
               styleClass="title-label"/>

        <!--subtítulo-->
        <Label text="Ganador:" styleClass="subtitle-label"/>
        styleClass="subtitle-label"/>

        <!--puntaje-->
        <Label fx:id="scoreLabel"
               text="0000"
               styleClass="score-label"/>

        <!--botones-->
        <HBox alignment="CENTER" spacing="20">
            <Button fx:id="retryButton" text="Reintentar" styleClass="action-button"/>
            <Button fx:id="menuButton" text="Menú Principal" styleClass="secondary-button"/>
        </HBox>
    </VBox>


</StackPane>
